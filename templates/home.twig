{% extends 'container.twig' %}
{% import 'macro.forms.twig' as form %}

{% block container %}
    <div id="carouselExampleIndicators" class="carousel slide carousel-fade rounded" style="overflow: hidden" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="p-2 rounded shadow-sm border active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1" class="p-2 rounded shadow-sm border "></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2" class="p-2 rounded shadow-sm border "></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="http://www.epsi.fr/wp-content/uploads/2017/02/epsi_slider_2.jpg" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="http://www.epsi.fr/wp-content/uploads/2017/02/epsi_slider_1.jpg" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="http://www.epsi.fr/wp-content/uploads/2017/02/EPSI-FC-Slide.jpg" alt="Third slide">
            </div>
        </div>
        <a class="carousel-control-prev bg-dark" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next bg-dark" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
</div>
{% endblock %}