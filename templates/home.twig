{% extends 'container.twig' %}
{% import 'macro.forms.twig' as form %}

{% block container %}
<div class="row justify-content-center">
    <div class="col-lg-9">
        <div id="carouselExampleIndicators" class="carousel slide carousel-fade rounded mb-3" style="overflow: hidden" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="p-2 rounded shadow-sm border active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1" class="p-2 rounded shadow-sm border "></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2" class="p-2 rounded shadow-sm border "></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="http://www.epsi.fr/wp-content/uploads/2017/02/epsi_slider_2.jpg" alt="First slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="http://www.epsi.fr/wp-content/uploads/2017/02/epsi_slider_1.jpg" alt="Second slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="http://www.epsi.fr/wp-content/uploads/2017/02/EPSI-FC-Slide.jpg" alt="Third slide">
                </div>
            </div>
            <a class="carousel-control-prev bg-dark" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next bg-dark" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>
<div class="card mb-3">
    <div class="card-header font-weight-bold">
        Le campus de Montpellier en bref :
    </div>
    <div class="card-body text-center">
        <ul class="list-group bg-light bg-light">
            <li class="list-group-item bg-light">Plus de 2500 m² répartis sur deux bâtiments</li>
            <li class="list-group-item bg-light">Salles équipées de tables connectées</li>
            <li class="list-group-item bg-light">Laboratoire MyDil</li>
            <li class="list-group-item bg-light">Laboratoire Réseaux</li>
            <li class="list-group-item bg-light">Espace de détente et de restauration</li>
            <li class="list-group-item bg-light">Espace co-working</li>
            <li class="list-group-item bg-light">Food truck tous les midis sur la partie campus</li>
        </ul>
    </div>
</div>
<div class="card mb-3">
    <div class="card-header font-weight-bold">
        La formation :
    </div>
    <div class="card-body text-center">
        <img class="img-fluid mb-3 rounded shadow-sm" src="/content/img/programme.png">
        <img class="img-fluid mb-3 rounded shadow-sm" src="/content/img/cursus.PNG">
    </div>
</div>
<div class="card mb-3">
    <div class="card-header font-weight-bold">
        Plus de 10 000 partenaires en France parmis :
    </div>
    <div class="card-body text-center">
        <ul class="list-group bg-light bg-light">
            <li class="list-group-item bg-light">Crédit Agricole</li>
            <li class="list-group-item bg-light">Atos</li>
            <li class="list-group-item bg-light">Capgemini</li>
            <li class="list-group-item bg-light">Et plein d'autres</li>
        </ul>
    </div>
</div>
<div class="card mb-3">
    <div class="card-header font-weight-bold">
        Campus de Montpellier
    </div>
    <div class="card-body text-center">
        <ul class="list-group bg-light bg-light">
            <li class="list-group-item bg-light">437 avenue des Apothicaires<br>
                34090 Montpellier</li>
            <li class="list-group-item bg-light">Tél : 04 67 04 20 01</li>
            <li class="list-group-item bg-light">info@montpellier-epsi.fr</li>
            <li class="list-group-item bg-light"><a href="http://www.epsi.fr" target="_blank">Obtenir plus d'informations (lien externe)</a> </li>
        </ul>
    </div>
</div>

{% endblock %}
